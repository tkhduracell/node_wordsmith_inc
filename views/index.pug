extends layout

block content
  .columns
    .column
      h1.title=title       
      p.subtitle Welcome to #{title}
      p System is also availible as an 
        a(href="/docs") api.
  .columns
    .column
      h2.title Input
      form(method="POST", action="/reverse", enctype="application/x-www-form-urlencoded")
        .field
          label.label Enter paragraph
          .control
            textarea.textarea(name="content", cols="20", rows="6", placeholder="Enter your text here")
        .field.is-grouped
          .control
            button.button.is-link Submit
    .column
      a(name="history") 
      h2.title History
      each item in history
        .box.content.history
          p.title.is-5 Source
          pre.source=item.source
          p.title.is-5 Result
          pre.result=item.result
      else 
        p.subtitle Nothing here yet, run a paragraph first.