{
  "name": "node-wordsmith-inc",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development forever --watch ./bin/www",
    "devv": "NODE_ENV=development forever start ./bin/www && (cd webapp && brunch watch) && forever stop ./bin/www ||  forever stop ./bin/www",
    "docs": "apidoc -i routes/ -o public/docs",
    "test": "mocha lib/**/**.spec.js",
    "test-e2e": "forever start ./bin/www && mocha-casperjs && forever stop ./bin/www ||  forever stop ./bin/www",
    "build": "brunch build --production"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "morgan": "~1.9.0",
    "pretty-error": "^2.1.1",
    "pug": "2.0.0-beta11",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "casper-chai": "^0.3.0",
    "casperjs": "^1.1.4",
    "chai": "^4.1.2",
    "forever": "^0.15.3",
    "livereload": "^0.6.3",
    "mocha": "^4.0.1",
    "mocha-casperjs": "^0.6.0",
    "phantomjs-prebuilt": "^2.1.7",
    "standard": "^10.0.3",
    "web": "file://./webapp"
  }
}
